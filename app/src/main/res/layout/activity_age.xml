<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context="com.techease.danyal.bmicalculator.AgeActivity">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/logo"
        android:layout_gravity="center"
        android:paddingBottom="100dp"
        android:layout_marginTop="57dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@drawable/age"
        android:layout_marginTop="16dp"
        android:id="@+id/imageView5"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:layout_below="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:id="@+id/getage" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/edit"
        android:id="@+id/imageView6"
        android:layout_alignTop="@+id/getage"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <ImageView
        android:layout_width="3dp"
        android:layout_height="120dp"
        android:background="@drawable/line"
        android:id="@+id/imageView7"
        android:layout_below="@+id/getage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:background="@drawable/male"
        android:id="@+id/malebutton"
        android:layout_alignTop="@+id/imageView7"
        android:layout_toLeftOf="@+id/imageView7"
        android:layout_toStartOf="@+id/imageView7" />
    <ImageButton
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:background="@drawable/female"
        android:id="@+id/femalebutton"
        android:layout_alignTop="@+id/imageView7"
        android:layout_toRightOf="@+id/imageView7"
        android:layout_toEndOf="@+id/imageView7" />


    <ImageView
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:background="@drawable/two"

        android:layout_marginBottom="34dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView3" />

    <ImageButton
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:id="@+id/next2"
        android:background="@drawable/next"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
